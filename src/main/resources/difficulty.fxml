    <Label text="Select Difficulty" style="-fx-font-size: 24;" />
    <Button fx:id="easyButton" text="Easy" prefWidth="200"/>
    <Button fx:id="mediumButton" text="Medium" prefWidth="200"/>
    <Button fx:id="hardButton" text="Hard" prefWidth="200"/>
    <Button fx:id="hellButton" text="Hell" prefWidth="200"/>
    <Button fx:id="surpassButton" text="Surpass Your Limits" prefWidth="200"/>
</VBox>
